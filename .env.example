# Health Check Configuration
HEALTH_CHECK_PORT=8080

# Database Configuration
DB_CONNECTION_STRING=Data Source=YOUR_SERVER;database=YOUR_DATABASE;Integrated Security=True;Persist Security Info=False;TrustServerCertificate=True;Connection Timeout=30;App Name=go-notifications-worker;
DB_MAX_OPEN_CONNS=150
DB_MAX_IDLE_CONNS=20
DB_CONN_MAX_LIFETIME_MINUTES=30
DB_CONN_MAX_IDLE_TIME_MINUTES=5

# Email Configuration
SMTP_FROM=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_HOST=smtp.example.com
SMTP_PORT=25
SMTP_POOL_SIZE=5

# Firebase Configuration
FIREBASE_CREDENTIALS_FILE=firebase-adminsdk.json
PUSH_BATCH_TIMEOUT_MS=50
PUSH_BATCH_SIZE=100
PUSH_BATCH_MAX_SIZE=500

# Worker Configuration
CLAIM_BATCH_HIGH=200
CLAIM_BATCH_NORMAL=500
HIGH_PRIORITY_WORKER_POOL_SIZE=200
NORMAL_PRIORITY_WORKER_POOL_SIZE=200
HIGH_PRIORITY_RATE_LIMIT=700
NORMAL_PRIORITY_RATE_LIMIT=300
REAPER_INTERVAL_SECONDS=15
RECLAIM_BACKOFF_SECONDS=60 # seconds to wait before allowing reclaim to be retried
RETRY_HIGH_BACKOFF_SECONDS=15
RETRY_NORMAL_BACKOFF_SECONDS=30
